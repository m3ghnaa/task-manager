<%- include('layout') %>

<h1 class="text-2xl font-semibold mb-4">Edit Task</h1>

<form action="/tasks/<%= task._id %>?_method=PUT" method="POST" class="bg-white p-6 rounded shadow-md">
    <label class="block text-gray-700">Task Name:</label>
    <input type="text" name="title" value="<%= task.title %>"
        class="w-full p-2 border rounded focus:outline-none focus:ring focus:border-blue-300" required>

    <label class="block text-gray-700 mt-4">Due Date:</label>
    <input type="date" name="dueDate" value="<%= task.dueDate ? task.dueDate.toISOString().split('T')[0] : '' %>"
        class="w-full p-2 border rounded focus:outline-none focus:ring focus:border-blue-300">

    <button type="submit" class="w-full mt-3 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        ğŸ’¾ Save Changes
    </button>
</form>
